<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <% if @product.image.present? %>
          <%= image_tag @product.image.url,
                class: "card-img-top img-fluid rounded-top",
                alt: @product.title %>
        <% end %>

        <div class="card-body p-4">

          <h1 class="card-title mb-3 fw-bold">
            <%= @product.title %>
          </h1>

          <span class="badge bg-primary mb-3">
            <%= @product.category.name %>
          </span>

          <hr>

          <p class="text-muted">
            <%= @product.description || "No description provided." %>
          </p>

          <div class="d-flex align-items-center justify-content-between mt-4">
            <h3 class="mb-0 text-success fw-semibold">
              £<%= number_with_precision(@product.price, precision: 2) %>
            </h3>

            <small class="text-muted">
              Added by <%= @product.user.email %>
            </small>
          </div>

          <hr class="my-4">

          <div class="d-flex gap-2">
            <%= link_to "← Back to products", products_path, class: "btn btn-outline-secondary" %>

            <% if user_signed_in? && current_user == @product.user %>
              <%= link_to "Edit", edit_product_path(@product), class: "btn btn-outline-primary" %>
              <%= link_to "Delete",
                    product_path(@product),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "btn btn-outline-danger" %>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
